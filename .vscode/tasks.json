{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build Fragments Image",
      "node": "docker-build",
      "type": "docker-build",
      "dockerBuild": {
        "context": "${workspaceFolder}",
        "file": "Dockerfile",
        "tag": "fragment:latest"
      }
    },
    {
      "label": "run Fragments Image",
      "type": "docker-run",
      "dependsOn": ["docker-build"],
      "dockerRun": {
        "env": {
          "LOG_LEVEL": "debug"
        },
        "envFiles": ["${workspaceFolder}/env.jest"],
        "ports": [
          {
            "containerPort": 8080,
            "hostPort": 5555
          }
        ],
        "image": "fragments:latest",
        "containerName": "fragments",
        "remove": true
      }
    }
  ]
}
